# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md,*.txt]
trim_trailing_whitespace = false
insert_final_newline = false

# PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/

[*.php]
indent_size = 4
