{
  "name": "buldy-framework",
  "description": "If Bulma and CodyHouse's framework had a child",
  "version": "0.1.0",
  "keywords": [
    "css",
    "scss",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "author": "Johann Schopplich",
  "scripts": {
    "build": "npm-run-all --sequential css-compile css-minify",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true scss/_global.scss dist/buldy.css",
    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output dist/buldy.min.css dist/buldy.css",
    "deploy": "npm run build",
    "watch": "watch-css",
    "watch-css": "nodemon -e scss -x \"npm run build\""
  },
  "devDependencies": {
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5"
  },
  "license": "MIT",
  "files": [
    "dist/*.{css,map}",
    "scss/**/*.scss"
  ]
}
